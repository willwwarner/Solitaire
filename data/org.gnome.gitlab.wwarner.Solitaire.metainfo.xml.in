<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
  <id>@app-id@</id>
  <metadata_license>CC0-1.0</metadata_license>
  <project_license>GPL-3.0-or-later</project_license>

  <name>Solitaire</name>
  <summary>Play patience games</summary>
  <description>
    <p>
      Solitaire features simple interface to play a variety of
      solitaire/patience games.
    </p>
    <p>
      Solitaire can figure out if the game you're playing can be won,
      and will let you undo the move that made the game unwinnable.
    </p>
    <p>
      If you need a hint, Solitaire will give you one that is guaranteed to
      lead to a win.
    </p>
  </description>
  <requires>
    <display_length compare="ge">360</display_length>
  </requires>
  <recommends>
    <control>keyboard</control>
    <control>pointing</control>
    <control>touch</control>
  </recommends>
  <screenshots>
    <screenshot type="default" width="850" height="850">
      <image>https://gitlab.gnome.org/wwarner/solitaire/-/raw/main/data/screenshot-1.png</image>
    </screenshot>
  </screenshots>

  <developer>
    <name>Will Warner</name>
  </developer>

  <url type="homepage">https://gitlab.gnome.org/wwarner/solitaire</url>
  <url type="vcs-browser">https://gitlab.gnome.org/wwarner/solitaire/</url>
  <url type="bugtracker">https://gitlab.gnome.org/wwarner/solitaire/-/issues</url>

  <translation type="gettext">solitaire</translation>
  <launchable type="desktop-id">@app-id@.desktop</launchable>
  <content_rating type="oars-1.1" />

  <branding>
    <color type="primary" scheme_preference="light">#8ff0a4</color>
    <color type="primary" scheme_preference="dark">#26a269</color>
  </branding>

  <releases>
    <release date="2026-01-11" version="50~alpha" type="development">
      <description>
        <ul>
          <li>First release</li>
          <li>Includes 3 games: Klondike, FreeCell, Tri-Peaks</li>
        </ul>
      </description>
    </release>
  </releases>
</component>
